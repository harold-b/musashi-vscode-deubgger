{
	"version": "0.2.0",
	"configurations": [
		{
			"name"              : "Launch Extension",
			"type"              : "extensionHost",
			"request"           : "launch",
			"runtimeExecutable" : "${execPath}",
			"stopOnEntry"       : false,
			"sourceMaps"        : true,
			"outDir"            : "${workspaceRoot}/out",
            
            //"preLaunchTask"     : "tsc",
            
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}",
				"--server=4711"
			]
		},
        
        
        {
            //"preLaunchTask"     : "tsc",
            
			"name"        : "DukDebug server",
			"type"        : "node",
			"request"     : "launch",
			"runtimeArgs" : [ "--nolazy" ],
			"program"     : "${workspaceRoot}/src/DukDebugger.ts",
			"stopOnEntry" : false,
			"args"        : [ "--server=4711" ],
			"sourceMaps"  : true,
			"outDir"      : "${workspaceRoot}/out",
			"cwd"         : "${workspaceRoot}"
		}
        
	]
}